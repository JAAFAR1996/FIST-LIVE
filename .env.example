# ========================================
# متغيرات البيئة لـ AQUAVO - Railway
# ========================================

# البيئة
NODE_ENV=production
PORT=5000

# قاعدة البيانات (NEON PostgreSQL)
DATABASE_URL=postgres://user:password@host/database?sslmode=require

# الجلسات
SESSION_SECRET=your-very-long-random-secret-here-at-least-32-chars

# Cloudinary (صور المنتجات)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Cloudflare R2 (صور المراجعات)
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-access-key
CLOUDFLARE_BUCKET_NAME=aquavo
CLOUDFLARE_CDN_URL=https://your-cdn-url.r2.dev

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@aquavo.com

# البريد الإلكتروني (Yahoo SMTP)
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@yahoo.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@yahoo.com

# رابط الموقع العام
VITE_PUBLIC_BASE_URL=https://aquavo.iq
CLIENT_URL=https://aquavo.iq

# Frontend (Vite)
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
