# ========================================
# متغيرات البيئة لـ AQUAVO - Railway
# ========================================

# البيئة
NODE_ENV=production
PORT=5000

# قاعدة البيانات (NEON PostgreSQL)
DATABASE_URL=postgres://user:password@host/database?sslmode=require

# الجلسات
SESSION_SECRET=your-very-long-random-secret-here-at-least-32-chars

# Cloudinary (صور المنتجات)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# البريد الإلكتروني (Yahoo SMTP)
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@yahoo.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@yahoo.com

# رابط الموقع العام
VITE_PUBLIC_BASE_URL=https://aquavo.iq
CLIENT_URL=https://aquavo.iq
