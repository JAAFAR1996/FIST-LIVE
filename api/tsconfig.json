{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": false,
        "outDir": "../dist",
        "rootDir": "..",
        "baseUrl": ".."
    },
    "include": [
        "./**/*",
        "../server/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "../node_modules",
        "../client",
        "../dist"
    ]
}